<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserMapper">

    <!-- 二级缓存 -->
    <cache readOnly="true" size="512"/>

    <resultMap id="user" type="com.example.domain.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
        <result column="ctm" property="ctm" jdbcType="TIMESTAMP"/>
        <result column="contact_address" property="contactAddress" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_name, age, ctm, contact_address
    </sql>


    <select id="getUserByName" parameterType="String" resultMap="user">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_user
        WHERE user_name = #{userName}
    </select>

    <select id="getAll2" resultMap="user">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_user

    </select>

    <select id="getAll" resultMap="user">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_user
        <if test="user != null">
            WHERE contact_address = #{user.contactAddress}
            AND age = #{user.age}
            AND user_name = #{user.userName}

        </if>

    </select>

    <select id="getUserById" resultMap="user">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_user
        <if test="#{id} != null">
            WHERE id = #{id}
        </if>

    </select>

    <update id="updateByUser">
        UPDATE tb_user
        SET age=#{user.age},
            user_name=#{user.userName},
            contact_address=#{user.contactAddress}
        WHERE id=#{user.id}
    </update>

    <insert id="add" parameterType="com.example.domain.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_user(user_name, age, ctm, contact_address)
        VALUES(
        #{user.userName},
        #{user.age},
        now(),
        #{user.contactAddress}
        )

    </insert>

   <delete id="deleteById">
      DELETE FROM tb_user WHERE  id=#{id}
   </delete>
</mapper>